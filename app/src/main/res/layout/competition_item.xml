<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="2dp"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/card_bg"
            android:padding="5dp">
            <TextView
                android:id="@+id/tvTeamName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="CLUB NAME"
                android:textSize="15sp"
                android:layout_marginEnd="5dp"
                android:includeFontPadding="false"
                android:textColor="@color/black"
                android:fontFamily="@font/merriweather_bold"
                app:layout_constraintEnd_toStartOf="@+id/iv_unavailable_sub"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

                <ImageView
                    android:id="@+id/iv_unavailable_sub"
                    android:layout_width="15dp"
                    android:layout_height="25dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:src="@drawable/ic_baseline_check_24"/>

            <TextView
                android:id="@+id/tv_comp_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Country"
                android:fontFamily="@font/merriweather_lightitalic"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@+id/tvTeamName"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>